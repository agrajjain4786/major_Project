<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
  <div class="col-8 offset-2 mt-4">
    <h3><%=listing.title%></h3>
  </div>

  <div class="card listing-card col-6 offset-3 mt-3">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body mt-3">
      <p class="card-text">
        <p>Owned By: <i><%= listing.owner.username %></i> </p>
        <p><%=listing.description%></p>
        <p>&#8377;<%=listing.price.toLocaleString("en-IN")%></p>
        <p><%=listing.location%></p>
        <p><%=listing.country%></p>
      </p>
    </div>
  </div>
  <br />
  <% if(user && user._id.equals(listing.owner._id)) {%>
  <div class="btns">
    <a
      href="/listings/<%=listing._id%>/edit"
      class="col-1 offset-3 btn btn-dark edit-btn"
      >Edit</a
    >
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="offset-3 btn btn-dark">Delete</button>
    </form>
  </div>
  <% } %>

  <div class="col-8 offset-3">
    <% if(user) {%>
      <hr />
    <h4>Leave a Review</h4>
    <form
      class="mb-3 needs-validation"
      action="/listings/<%=listing._id %>/reviews"
      method="post"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label class="form-lable" for="rating">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          class="form-range"
          name="review[rating]"
        />
      </div>
      <div class="mb-3 mt-3">
        <label class="form-lable" for="comment">Comments</label>
        <textarea
          class="form-control"
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some Comment for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
    <hr />
    <h4>All Reviews</h4>

    <div class="row">
      <% for (review of listing.reviews) { %>
      <div class="review-card card col-5 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title mb-2">@<%= review.author.username%></h5>
          <p class="card-text mb-0" x><b>Comment: </b> <%= review.comment%></p>
          <p class="card-text"><b> Rating: </b> <%= review.rating%> stars</p>
        </div>
        <% if(user && user._id.equals(review.author._id)) { %>
        <form
          class="mb-3"
          action="/listings/<%= listing._id%>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-dark btn-sm">Delete</button>
        </form>
        <% } %>
      </div>
      <%} %>
    </div>
  </div>
</div>
