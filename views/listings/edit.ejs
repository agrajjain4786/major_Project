<%- layout("layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h2 class="mb-4">Edit your listing</h2>
    <form
      action="/listings/<%=listing._id%>?_method=put"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          class="form-control"
          name="listing[title]"
          value="<%=listing.title%>"
          required
        />
        <div class="valid-feedback">title looks good</div>
        <div class="invalid-feedback">please enter valid title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          required
          name="listing[description]"
          class="form-control"
          placeholder="enter new description"
        >
        <%=listing.description%>"</textarea
        >
        <div class="valid-feedback">description looks good</div>
        <div class="invalid-feedback">please enter valid description</div>
      </div>
      <div class="mb-3">
        <label class="form-lable" for="image">Image Link or Url</label>
        <input
          required
          type="text"
          class="form-control"
          name="listing[image]"
          value="<%=listing.image%>"
        />
        <div class="invalid-feedback">please enter valid image url</div>
        <div class="valid-feedback">Image url looks good</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-lable" for="price">Price</label>
          <input
            type="number"
            required
            class="form-control"
            name="listing[price]"
            value="<%=listing.price%>"
          />
          <div class="valid-feedback">price looks good</div>
          <div class="invalid-feedback">please enter valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label class="form-lable" for="country">Country</label>
          <input
            type="text"
            class="form-control"
            required
            name="listing[country]"
            value="<%=listing.country%>"
          />
          <div class="valid-feedback">country looks good</div>
          <div class="invalid-feedback">please enter valid country</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-lable" for="location">Location</label>
        <input
          required
          type="text"
          class="form-control"
          name="listing[location]"
          value="<%=listing.location%>"
        />
        <div class="valid-feedback">location looks good</div>
        <div class="invalid-feedback">please enter valid location</div>
      </div>
      <button class="btn btn-dark mt-4 edit-btn">Edit</button>
    </form>
    <br /><br />
  </div>
</div>
